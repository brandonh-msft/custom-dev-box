{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "galleryName": {
            "type": "string",
            "defaultValue": "squadboxgallery"
        },
        "imageTemplate_name": {
            "defaultValue": "devsquad-windows-devready",
            "type": "string"
        },
        "azureFiles_key": {
            "type": "string"
        },
        "identityName": {
            "defaultValue": "aibIdentity",
            "type": "string"
        },
        "location": {
            "defaultValue": "[resourceGroup().location]",
            "type": "string"
        },
        "deployOnFailure": {
            "defaultValue": false,
            "type": "bool"
        },
        "offer_name": {
            "defaultValue": "Developer",
            "type": "string"
        },
        "sku_name": {
            "defaultValue": "Windows-DevReady",
            "type": "string"
        }
    },
    "resources": [
        {
            "type": "Microsoft.Compute/galleries/images",
            "name": "[concat(parameters('galleryName'), '/', parameters('imageTemplate_name'))]",
            "apiVersion": "2021-10-01",
            "location": "[parameters('location')]",
            "properties": {
                "osType": "Windows",
                "osState": "Generalized",
                "identifier": {
                    "publisher": "DevSquad",
                    "offer": "[parameters('offer_name')]",
                    "sku": "[parameters('sku_name')]"
                },
                "recommended": {
                    "vCPUs": {
                        "min": 4,
                        "max": 16
                    },
                    "memory": {
                        "min": 16,
                        "max": 64
                    }
                },
                "hyperVGeneration": "V2",
                "features": [
                    {
                        "name": "SecurityType",
                        "value": "TrustedLaunch"
                    },
                    {
                        "name": "IsHibernateSupported",
                        "value": "true"
                    }
                ],
                "architecture": "x64"
            },
            "tags": {}
        },
        {
            "type": "Microsoft.VirtualMachineImages/imageTemplates",
            "apiVersion": "2023-07-01",
            "name": "[parameters('imageTemplate_name')]",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Compute/galleries/images', parameters('galleryName'), parameters('imageTemplate_name'))]"
            ],
            "identity": {
                "type": "UserAssigned",
                "userAssignedIdentities": {
                    "[resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', parameters('identityName'))]": {}
                }
            },
            "properties": {
                "source": {
                    "offer": "visualstudioplustools",
                    "publisher": "microsoftvisualstudio",
                    "sku": "vs-2022-ent-general-win11-m365-gen2",
                    "type": "PlatformImage",
                    "version": "latest"
                },
                "customize": [
                    {
                        "inline": [
                            "git clone https://gist.github.com/192ae5cd666b87b2adbe6f4c6d9cab0e.git c:\\scripts --depth 1 -q",
                            "cd c:\\scripts",
                            "git log -q"
                        ],
                        "name": "clone scripts",
                        "runAsSystem": true,
                        "runElevated": true,
                        "type": "PowerShell"
                    },
                    {
                        "inline": [
                            "c:\\scripts\\Configure-DevSquadVM-System.ps1"
                        ],
                        "name": "configure vm (system)",
                        "runAsSystem": true,
                        "runElevated": true,
                        "type": "PowerShell",
                        "validExitCodes": [
                            0,
                            1
                        ]
                    },
                    {
                        "name": "Do Windows Updates",
                        "type": "WindowsUpdate"
                    },
                    {
                        "name": "Restart Windows",
                        "type": "WindowsRestart"
                    },
                    {
                        "inline": [
                            "[concat('c:\\scripts\\Configure-ScheduledTasks \"', parameters('azureFiles_key'), '\"')]",
                            "c:\\scripts\\Remove-Things.ps1",
                            "DISM.exe /Online /Set-ReservedStorageState /State:Disabled"
                        ],
                        "name": "Run more scripts",
                        "runAsSystem": true,
                        "runElevated": true,
                        "type": "PowerShell",
                        "validExitCodes": [
                            0,
                            1
                        ]
                    },
                    {
                        "destination": "c:\\DeprovisioningScript.ps1",
                        "name": "new deprovisioning script",
                        "sourceUri": "https://gist.githubusercontent.com/brandonh-msft/192ae5cd666b87b2adbe6f4c6d9cab0e/raw/DeprovisioningScript.ps1",
                        "type": "File"
                    }
                ],
                "optimize": {
                    "vmBoot": {
                        "state": "Enabled"
                    }
                },
                "validate": {
                    "continueDistributeOnFailure": "[parameters('deployOnFailure')]"
                },
                "distribute": [
                    {
                        "excludeFromLatest": false,
                        "galleryImageId": "[resourceId('Microsoft.Compute/galleries/images', parameters('galleryName'), parameters('imageTemplate_name'))]",
                        "replicationRegions": [
                            "[parameters('location')]"
                        ],
                        "runOutputName": "runOutputImageVersion",
                        "type": "SharedImage"
                    }
                ],
                "buildTimeoutInMinutes": 0,
                "vmProfile": {
                    "vmSize": "Standard_B4ms",
                    "osDiskSizeGB": 128
                }
            }
        },
        {
            "type": "Microsoft.VirtualMachineImages/imageTemplates/triggers",
            "apiVersion": "2023-07-01",
            "name": "[concat(parameters('imageTemplate_name'), '/SourceImage-211705867586825')]",
            "dependsOn": [
                "[resourceId('Microsoft.VirtualMachineImages/imageTemplates', parameters('imageTemplate_name'))]"
            ],
            "properties": {
                "kind": "SourceImage"
            }
        }
    ]
}